<UserControl x:Class="Hirundo.App.Components.Specimens.SpecimensView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:specimens="clr-namespace:Hirundo.App.Components.Specimens"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:Background="AliceBlue"
             d:DataContext="{d:DesignInstance specimens:SpecimensViewModel}">
    <StackPanel Margin="10">
        <WrapPanel Margin="10">
            <TextBlock
                TextWrapping="WrapWithOverflow">
                W tym panelu decydujesz, w jaki sposób grupować obserwacje w grupy reprezentujące pojedyncze osobniki.
            </TextBlock>
        </WrapPanel>
        <WrapPanel Margin="10">
            <Label>Identyfikator osobnika</Label>
            <ComboBox MinWidth="100">
                <ComboBoxItem>aaa</ComboBoxItem>
                <ComboBoxItem>bbb</ComboBoxItem>
                <ComboBoxItem>ccc</ComboBoxItem>
            </ComboBox>
        </WrapPanel>
        <WrapPanel Margin="10">
            <CheckBox>Czy dodawać obserwacje o pustych identyfikatorach?</CheckBox>
        </WrapPanel>
    </StackPanel>
</UserControl>