<UserControl
    x:Class="Hirundo.Processors.Returning.WPF.NotEarlierThanGivenDateNextYear.NotEarlierThanGivenDateNextYearView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:notEarlierThanGivenDateNextYear="clr-namespace:Hirundo.Processors.Returning.WPF.NotEarlierThanGivenDateNextYear"
    xmlns:labels="clr-namespace:Hirundo.Commons.WPF.Repositories.Labels;assembly=Hirundo.Commons.WPF"
    xmlns:wpf="clr-namespace:Hirundo.Commons.WPF;assembly=Hirundo.Commons.WPF"
    mc:Ignorable="d"
    d:Background="AliceBlue"
    d:DataContext="{d:DesignInstance notEarlierThanGivenDateNextYear:NotEarlierThanGivenDateNextYearViewModel}"
    Width="300"
    >
    <wpf:RemovableControl RemoveCommand="{Binding RemoveCommand}">
        <StackPanel>
            <TextBlock FontWeight="Bold"
                       TextWrapping="Wrap"
                       >Osobnik powraca nie wcześniej niż na daną datę (MM-DD) następnego roku.</TextBlock>
            <WrapPanel>
                <Label>Nazwa pola daty</Label>
                <labels:LabelsComboBox
                    ValueName="{Binding DateValueName}"
                    DataType="{Binding DataType}"
                    Repository="{Binding Repository}" />
            </WrapPanel>
            <WrapPanel>
                <Label>Miesiąc</Label>
                <TextBox MinWidth="100" Text="{Binding Month}" />
            </WrapPanel>
            <WrapPanel>
                <Label>Dzień</Label>
                <TextBox MinWidth="100" Text="{Binding Day}" />
            </WrapPanel>
        </StackPanel>
    </wpf:RemovableControl>
</UserControl>