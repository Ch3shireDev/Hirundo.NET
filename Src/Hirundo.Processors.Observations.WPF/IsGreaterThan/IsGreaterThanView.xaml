<UserControl x:Class="Hirundo.Processors.Observations.WPF.IsGreaterThan.IsGreaterThanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:isGreaterThan="clr-namespace:Hirundo.Processors.Observations.WPF.IsGreaterThan"
             xmlns:labels="clr-namespace:Hirundo.Commons.WPF;assembly=Hirundo.Commons.WPF"
             mc:Ignorable="d"
             d:Background="AliceBlue"
             d:DataContext="{d:DesignInstance isGreaterThan:IsGreaterThanViewModel}">
    <StackPanel>
        <labels:LabelsComboBox
                ValueLabel="Nazwa wartości"
                ValueName="{Binding ValueName}"
                DataType="{Binding DataType}"
                Repository="{Binding Repository}" />
        <WrapPanel>
            <Label>Wartość jest większa niż</Label>
            <TextBox Text="{Binding Value, Mode=TwoWay}" MinWidth="100" />
        </WrapPanel>
    </StackPanel>
</UserControl>