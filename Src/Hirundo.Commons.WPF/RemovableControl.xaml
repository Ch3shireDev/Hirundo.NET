<UserControl x:Class="Hirundo.Commons.WPF.RemovableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="AliceBlue"
             x:Name="CustomUserControl"
             >
    <Grid MinHeight="150" MinWidth="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ContentPresenter
            Grid.Row="0"
            d:Content="Example text"
            Content="{Binding Content, ElementName=CustomUserControl}"
            />
        <Button
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="DarkRed"
            Foreground="White"
            BorderBrush="DarkRed"
            Command="{Binding RemoveCommand, ElementName=CustomUserControl}"
            Content="{Binding RemoveText, ElementName=CustomUserControl}" 
            d:Content="Usuń warunek"
            />
    </Grid>
</UserControl>