<UserControl x:Class="Hirundo.Commons.WPF.FileSourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hirundo.Commons.WPF"
             mc:Ignorable="d"
             d:Background="AliceBlue"
             d:Width="200"
             >
    <WrapPanel>
        <TextBox x:Name="TextBox" MinWidth="200" Text="{Binding Path, RelativeSource={RelativeSource AncestorType={x:Type local:FileSourceControl}}, Mode=TwoWay}" />
    </WrapPanel>
</UserControl>