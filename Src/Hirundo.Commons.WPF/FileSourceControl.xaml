<UserControl x:Class="Hirundo.Commons.WPF.FileSourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hirundo.Commons.WPF"
             mc:Ignorable="d"
             d:Background="AliceBlue"
             d:Width="400"
             >
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    <WrapPanel>
        <TextBlock x:Name="TextBox" Text="{Binding Filename, RelativeSource={RelativeSource AncestorType={x:Type local:FileSourceControl}}, NotifyOnTargetUpdated=True}" MaxWidth="200" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
        <Button Command="{Binding SelectFileCommand, RelativeSource={RelativeSource AncestorType={x:Type local:FileSourceControl}}}">Wybierz plik</Button>
    </WrapPanel>
</UserControl>